---
import { Icon } from 'astro-icon/components'
---
<header class="menu-header font-h sticky top-0 p-2 z-50 w-full  bg-slate-900 dark:bg-slate-900 dark:text-slate-50 backdrop-blur supports-[backdrop-filter]:bg-white/90">
    <div class="container mx-auto flex h-16 items-center px-4">
        <a href="/" class="flex items-center space-x-2 p-3">
            <img src="/images/dccp-logo.webp" alt="DCCP Logo" class="h-14 w-auto" />
        </a>
       
        <div class="flex items-center ml-auto">
            <nav class="hidden md:flex items-center space-x-8">
                <a href="#courses" class="text-sm font-medium transition-colors hover:text-blue-700 dark:hover:text-blue-400 flex flex-col text-center align-center mx-1">
                    <i class="fi fi-rr-scroll-document-story text-2xl text-blue-900 dark:text-blue-300"></i>
                    <span class="text-xs font-bolder  text-slate-800 dark:text-gray-200 hover:text-blue-900">Courses</span>
                </a>
                <a href="#about" class="text-sm font-medium transition-colors hover:text-blue-700 dark:hover:text-blue-400 flex flex-col text-center align-center mx-1">
                    <i class="fi fi-rr-school text-2xl text-blue-900 dark:text-blue-300"></i>
                    <span class="text-xs font-bolder  text-slate-800 dark:text-gray-200 hover:text-blue-900">About Us</span>
                </a>
                <a href="https://dccp-portal-v1-beta.vercel.app" class="text-sm font-medium transition-colors hover:text-blue-700 dark:hover:text-blue-400 flex flex-col text-center align-center mx-1">
                    <i class="fi fi-rr-student text-2xl text-blue-900 dark:text-blue-300"></i>
                    <span class="text-xs font-bolder  text-slate-800 dark:text-gray-200 hover:text-blue-900">My Portal</span>
                </a>
            </nav>
            
            <button aria-label="Toggle Theme" class="inline-flex items-center justify-center rounded-md text-sm font-medium border border-input bg-background hover:bg-accent h-10 w-10 md:hidden">
                <Icon name="heroicons:bars-3-solid" class="h-5 w-5" />
                <span class="sr-only">Toggle menu</span>
            </button>
        </div>
    </div>
</header>

<style>
    .menu-header {
        box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    }
</style>