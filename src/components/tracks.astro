<script>
    document.addEventListener('DOMContentLoaded', () => {
        const tabContainers = document.querySelectorAll('[data-tab-container]');

        function initializeTabGroup(container: HTMLElement) {
            const tabButtons = container.querySelectorAll('[data-tab-button]') as NodeListOf<HTMLElement>;
            const tabPanes = container.querySelectorAll('[data-tab-pane]') as NodeListOf<HTMLElement>;

            tabButtons.forEach((button: HTMLElement) => {
                button.addEventListener('click', () => {
                    const targetId = button.getAttribute('data-tab-button');

                    // Update button states
                    tabButtons.forEach((btn: HTMLElement) => {
                        if (btn.getAttribute('data-tab-button') === targetId) {
                            btn.classList.add('active');
                            btn.setAttribute('aria-selected', 'true');
                        } else {
                            btn.classList.remove('active');
                            btn.setAttribute('aria-selected', 'false');
                        }
                    });

                    // Update pane visibility
                    tabPanes.forEach((pane: HTMLElement) => {
                        if (pane.getAttribute('data-tab-pane') === targetId) {
                            pane.classList.remove('hidden');
                        } else {
                            pane.classList.add('hidden');
                        }
                    });
                });
            });
        }

        tabContainers.forEach((container) => {
            if (container instanceof HTMLElement) {
                initializeTabGroup(container);
            }
        });
    });
</script>
