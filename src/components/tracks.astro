<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Function to initialize a tab group
        function initializeTabGroup(container) {
            const tabButtons = container.querySelectorAll('[data-tab]');
            const tabPanes = container.querySelectorAll('[data-tab-content]');

            tabButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const tabId = button.getAttribute('data-tab');
                    
                    // Remove active class from all buttons and panes in this group
                    tabButtons.forEach(btn => {
                        btn.classList.remove('border-blue-600', 'text-blue-600');
                        btn.classList.add('border-transparent', 'text-gray-500');
                    });
                    tabPanes.forEach(pane => pane.classList.add('hidden'));

                    // Add active class to clicked button
                    button.classList.remove('border-transparent', 'text-gray-500');
                    button.classList.add('border-blue-600', 'text-blue-600');
                    
                    // Show the selected tab content
                    const selectedPane = container.querySelector(`[data-tab-content="${tabId}"]`);
                    if (selectedPane) {
                        selectedPane.classList.remove('hidden');
                    }
                });
            });
        }

        // Initialize each tab group separately
        const academicTracks = document.querySelector('.grid > div:first-child');
        const technicalTracks = document.querySelector('.grid > div:last-child');

        if (academicTracks) initializeTabGroup(academicTracks);
        if (technicalTracks) initializeTabGroup(technicalTracks);
    });
</script>
